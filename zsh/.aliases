alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias db="cd ~/projects/devboxes"
alias p="cd ~/projects"
alias pa="cd ~/projects/partnerarea"
alias g="git"

# git aliases
alias gc="git commit -m $1"
alias gs="git status"
alias gp="git pull"
alias gf="git fetch"
alias gpush="git push"

# npm aliases
alias ni="npm install"
alias nrs="npm run start"
alias nrb="npm run build"
alias nrt="npm run test"
alias rmn="rm -rf node_modules"
alias flush-npm="rm -rf node_modules && npm i"

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Lock the screen (when going AFK)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

#start devbox nighlties
alias nup="cd ~/projects/devboxes && rake nightly:up"
alias ndown="cd ~/projects/devboxes && vagrant halt -f"

alias canaryunsafe="/Applications/Google\ Chrome\ Canary.app/Contents/MacOS/Google\ Chrome\ Canary --disable-web-security --ignore-certificate-errors"
